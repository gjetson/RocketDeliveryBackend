<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :restaurant_id, style: "display: block" %>
    <%#= form.number_field :restaurant_id %>
    <%= form.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  </div>
  <div>
    <%= form.label :customer_id, style: "display: block" %>
    <%#= form.number_field :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :email %>
  </div>
  <div>
    <%= form.label :order_status_id, style: "display: block" %>
    <%#= form.number_field :order_status_id %>
    <%= form.collection_select :order_status_id, OrderStatus.all, :id, :name %>
  </div>
  <div>
    <%= form.label :restaurant_rating, style: "display: block" %>
    <%= form.number_field :restaurant_rating %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
